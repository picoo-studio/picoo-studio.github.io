                    j = d.createElement(s),
                    dl = l != "dataLayer" ? "&l=" + l : "";
                // @ts-ignore
                j.async = true;
                // @ts-ignore
                j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
                f.parentNode.insertBefore(j, f);
            })(window, document, "script", "dataLayer", "GTM-5RVXBSHZ");
        </script>
        <!-- End Google Tag Manager -->
    </head>

    <body>
        <nav>
            <a href="https://github.com/orgs/picoo-studio/projects">Projects</a>
            <a>Area</a>
            <a>Inbox</a>
            <a
                href="https://dev.epicgames.com/community/profile/organization/4d6r/picoostudio"
            >
                Resources
            </a>
        </nav>
        <main>
            <slot />
        </main>
        <footer>
            <p>
                © 2025 Picoo Studio. All Rights Reserved.
                <a href="https://beian.miit.gov.cn" target="_blank">
                    沪ICP备2025124344号
                </a>
                |
                <a href="https://github.com/picoo-studio">GitHub</a>
            </p>
        </footer>
        <!-- Google Tag Manager (noscript) -->
